<%- include ../partials/header.ejs %>
<%- include ../partials/top_nav_bar.ejs %>

<!-- Content for the Edit page -->
<main class="container" style="margin-top: 8rem ;margin-left: 4rem;text-align:left">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Contact Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the Contact Name"
                    name="name" 
                    value="<%= bcontact.name %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="phoneTextField">Contact Number</label>
                    <input type="text" class="form-control"
                    id="phoneTextField"
                    placeholder="Enter the Contact Number"
                    name="phone" 
                    value="<%= bcontact.phone %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="emailTextField">Email Address</label>
                    <input type="text" class="form-control"
                    id="emailTextField"
                    placeholder="Enter the Email Address"
                    name="email" 
                    value="<%= bcontact.email %>"
                    required>
                </div>
               
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                <button href="/bcontact-list/delete/<%= bcontact._id %>" class="btn btn-danger">
                        <i class="fas fa-trash-alt"></i> Delete</button> 

                <button href="/bcontact-list" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</button>                                   
            </form>
        </div>

</div>
</main>

<%- include ../partials/bottom_nav_bar.ejs %>  
<%- include ../partials/footer.ejs %>